{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "ai_agent",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": true
      },
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**", "http://**", "https://api.us.langfuse.com/api/public/ingestion"]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "open": true,
        "confirm": true,
        "message": true
      }
    },
    "windows": [
      {
        "title": "ai_agent",
        "width": 800,
        "height": 800,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline';"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dev.michalmlak.ai_agent",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
